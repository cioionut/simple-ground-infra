---
extends: default

rules:
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
  line-length:
    max: 120
    level: warning
    ignore: |
      default-values.yaml
      cloud-config.yaml.tftpl
  truthy:
    allowed-values: ["true", "false"]

ignore:
  - galaxy.yml
